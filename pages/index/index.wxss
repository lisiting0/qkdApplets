@import "../../style/weui.wxss";
/* 轮播图 */

.swiper {
  width: 100%;
  height: 240rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/* 功能块（相亲、活动、抽奖、商城） */

.menu_href {
  float: left;
  width: 25%;
  color: #262626;
  text-align: center;
  padding: 30rpx 0;
}

.menu_href icon {
  display: block;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 54rpx;
  border-radius: 40rpx;
  color: #fff;
  margin: 0 auto;
  position: relative;
}

.menu_href text {
  font-size: 30rpx;
  color: #1b1b1b;
}

.xq {
  background-color: #ff334b;
}

.hd {
  background-color: #35bfde;
}

.cj {
  background-color: #fdac32;
}

.sc {
  background-color: #2ce2a7;
}

/* 附近邀约标题 */

.function_section {
  padding: 0 40rpx 0;
}

.function_title {
  border-bottom: 2px solid #f3f3f3;
  clear: both;
}

.function_title .title {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  text-align: left;
  position: relative;
}

.function_title .fjyy::before {
  content: "";
  width: 0.5rem;
  position: absolute;
  bottom: -8rpx;
  left: 45%;
  border-bottom: 8rpx solid #2cbaff;
}

/* 查看更多 */

.function_title .more {
  float: right;
  font-size: 34rpx;
  position: relative;
  padding-right: 38rpx;
}

.function_title navigator {
  color: #989898;
}

.function_title icon {
  width: 18rpx;
  height: 18rpx;
  display: inline-block;
  border-top: solid 1px #989898;
  border-right: solid 1px #989898;
  -webkit-transform: rotate(45deg);
  position: absolute;
  right: 0;
  top: 18rpx;
}

/* 附近邀约内容块 */

.function_container {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content:space-between;
  padding: 20rpx 0;
}

.fjjy_con {
  width: 49%;
  float: left;
}

.fjyy_panel {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: relative;
}

.fjyy_panel .left_con {
  width: 120rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  font-weight: 300;
  text-align: center;
  border-radius: 14rpx;
  padding: 0.05rpx 0.25px;
  margin-left: 8rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}

.fjyy_panel .left_con.xy{    
    background: -webkit-linear-gradient(left, #16c8de, #3ad0ea, #5ed7f7); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(left, #16c8de, #3ad0ea, #5ed7f7); /* Opera 11.6 - 12.0 */
    background: -moz-linear-gradient(left, #16c8de, #3ad0ea, #5ed7f7); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #16c8de, #3ad0ea, #5ed7f7); /* 标准的语法（必须放在最后） */  
}

.fjyy_panel .left_con.qy{
  background: -webkit-linear-gradient(left, #f785ff, #f364fc, #f049fa); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #f785ff, #f364fc, #f049fa); /* Opera 11.6 - 12.0 */
  background: -moz-linear-gradient(left, #f785ff, #f364fc, #f049fa); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #f785ff, #f364fc, #f049fa); /* 标准的语法（必须放在最后） */
}

 .fjyy_panel .left_con.jy{
  background: -webkit-linear-gradient(left, #ffb533, #FFB533, #ff7900); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #ffd455, #FFB533, #ff7900); /* Opera 11.6 - 12.0 */
  background: -moz-linear-gradient(left, #ffd455, #FFB533, #ff7900); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ffd455, #FFB533, #ff7900); /* 标准的语法（必须放在最后） */
}
.fjyy_panel .left_con.zy{
  background: -webkit-linear-gradient(left, #4b7dfa, #6f78fa, #9074fa); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #4b7dfa, #6f78fa, #9074fa); /* Opera 11.6 - 12.0 */
  background: -moz-linear-gradient(left, #4b7dfa, #6f78fa, #9074fa); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #4b7dfa, #6f78fa, #9074fa); /* 标准的语法（必须放在最后） */
}
.fjyy_panel .left_con.py{
  background: -webkit-linear-gradient(left, #35df32, #24c532, #15af31); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #35df32, #24c532, #15af31); /* Opera 11.6 - 12.0 */
  background: -moz-linear-gradient(left, #35df32, #24c532, #15af31); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #35df32, #24c532, #15af31); /* 标准的语法（必须放在最后） */
}

.fjyy_panel .bottom_con {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 0.05rpx 0.25px;
  position: absolute;
  bottom: 0;
  border-radius: 0 0 10rpx 10rpx;
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.5)));
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
  font-weight: 500;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.fjyy_panel .bottom_con text:first-child {
  margin-left: 10rpx;
}

.fjyy_panel .bottom_con text:last-child {
  width: 40%;
  margin-right: 10px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fjyy_panel .bottom_con .bottom_lf,
.fjyy_panel .bottom_con .bottom_rf{
  display: inline-flex;
}
.fjyy_panel .bottom_con .bottom_lf .bottom_lf_text{
  text-indent: 10rpx;
}

.fjyy_panel .bottom_con .bottom_lf icon,
.fjyy_panel .bottom_con .bottom_rf icon{
  display: inline-flex;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-right: 5rpx;
}

.fjyy_panel .bottom_con .bottom_rf .starttime {
  width: 40%;
  margin-right: 10rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 附近的人 */
.fjdr_container{
  clear: both;
}

.fjdr_con{
  display: inline-block;
  width: 22%;
  height: 180rpx;
  margin: 20rpx 10rpx 20rpx;
}

.fjjy_con{
  margin: 0 0 20rpx;
}

.fjjy_con .fjyy_name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000;
  font-size: 28rpx;
  font-weight: 400;
  height: 54rpx;
  line-height: 60rpx;
}
.fjjy_con .fjyy_icon image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.fjjy_con .fjyy_time {
  color: #b3b3b3;
  font-size: 24rpx;
}

.fjdr_con .fjdr_panel{
  width: 100%;
  height: 80%;
  background-size: cover;
  background-position: center;
  border-radius: 10rpx;
  position: relative;  
}

.fjdr_con .fjdr_panel .icon_container{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  position: absolute;
  right: -12rpx;
  bottom: -12rpx;
  border: 1px solid #FFF;
  text-align: center;
}
.fjdr_con .fjdr_panel .icon_container icon{
  color: #FFF;
  font-size: 20rpx;
  position: absolute;
  right: 22%;
  bottom: 10%;
}


.fjdr_con .fjdr_name{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000;
  font-size: 28rpx;
  font-weight: 400;
  height: 54rpx;
  line-height: 60rpx;
  text-align: center;
}