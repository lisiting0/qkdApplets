.publish_bd {
  margin-bottom: 150rpx;
}

.publish_bd .img_panel {
  margin-top: 30rpx;
  padding: 0;
  background-color: #fff;
  color: #3b3b3b;
}

.publish_bd .img_panel .img_con {
  position: relative;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}

.publish_bd .img_panel .img_con .title {
  width: 25%;
  font-size: 36rpx;
  color: #3b3b3b;
}

.publish_bd .img_panel .img_con .con {
  width: 70%;
  text-align: right;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #b1b1b1;
}

.publish_bd .img_panel .img_con .con text {
  font-size: 28rpx;
  color: #b1b1b1;
  display: inline-block;
  width: 260rpx;
  height: 100rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  border-radius: 20rpx;
  vertical-align: middle;
}

.publish_bd .img_panel .next_icon {
  width: 5%;
}

.userInfo_panel {
  padding: 0;
  background-color: #fff;
  color: #3b3b3b;
}

.userInfo_panel .userInfo_title {
  font-size: 32rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.userInfo_panel .userInfo_con {
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}

.publish_bd .userInfo_panel .userInfo_con view:nth-of-type(1) {
  width: 30%;
}

.publish_bd .userInfo_panel .userInfo_con view:nth-of-type(2) {
  width: 65%;
}

.userInfo_panel .userInfo_con view:nth-of-type(3) {
  width: 5%;
}

.userInfo_panel .userInfo_con view:nth-of-type(2) {
  width: 60%;
  text-align: right;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #b1b1b1;
}

.entry_view {
  width: 96% !important;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.entry_view input {
  font-size: 32rpx;
  width: 260rpx;
  padding: 5px 0;
  text-align: right;
}

.publish_bd .publish_bd_btn {
  width: 100%;
  padding: 1em 0;
  text-align: center;
  background-color: #f5f5f5;
  position: fixed;
  left: 0;
  bottom: 0;
  filter: Alpha(Opacity=80);
  opacity: 0.8;
}

.publish_bd .publish_bd_btn text {
  display: inline-block;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #ff8a84;
  border-radius: 1rem;
  margin-right: 10rpx;
}

.publish_bd .publish_bd_btn text.bc {
  background-color: #fff;
  border: 1px solid #ff8a84;
  color: #ff8a84;
} 

.weui-dialog .input_content .input_con textarea {
  width: 100%;
  height: 200rpx;
  font-size: 36rpx;
  border: 1px solid #f2f2f2;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  text-align: left;
}
