@import "../../utils/wxParse/wxParse.wxss";

.at_img {
  position: relative;
  width: 100%;
}

.at_img.at_img_auto {
  height: auto;
}

.at_img .at_i_img {
  width: 100%;
  display: block;
  background-repeat: no-repeat;
  background-position: center top;
  background-size: cover;
}

.at_img .at_zc {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  background-color: #f00;
}

.at_desc {
  background-color: #fff;
  padding: 40rpx;
  border-bottom: 1px solid #f2f2f2;
}

.at_desc .at_title {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
  margin: 10rpx 0;
}

.at_desc .at_count {
  color: #b2b2b2;
}

.at_desc .at_count icon {
  margin: 0 10rpx;
  display: inline-flex;
  vertical-align: top;
}

.at_con {
  color: #b1b1b1;
  font-size: 32rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #f2f2f2;
  position: relative;
}

.at_con icon {
  display: inline-flex;
  vertical-align: top;
  margin-right: 20rpx;
}

.at_con .del {
  text-decoration: line-through;
}

.at_con.at_address {
  display: flex;
  align-items: center;
}

.at_con.at_address icon {
  width: 5%;
}

.at_con.at_address text {
  width: 90%;
}

.end .at_img .at_zc {
  background-color: #b1b1b1;
}

.end .at_desc .at_title text, .end .at_desc .at_count text,
.end .at_desc icon text {
  color: #b1b1b1;
}

.ct_intro_title {
  color: #081c2e;
  font-size: 36rpx;
  padding: 30rpx 40rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #f2f2f2;
}

.ct_intro {
  padding: 20rpx 40rpx;
  margin-bottom: 120rpx;
  background-color: #fff;
}

.ct_intro .ct_into_con {
  padding-bottom: 20rpx;
}

.ct_intro .ct_into_con .title, .ct_intro .ct_into_con .desc {
  color: #666;
  font-size: 32rpx;
  line-height: 70rpx;
}

.ct_intro .ct_into_con .desc {
  padding: 0 20rpx;
}

.end .ct_intro .ct_into_con .title:before {
  border-left: 20rpx solid #b1b1b1;
}

.ct_intro .ct_into_con .title:before {
  content: '';
  margin-right: 20rpx;
  border-left: 20rpx solid #f00;
}

.action_footer {
  height: 120rpx;
  font-size: 0;
  z-index: 9;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.action_footer .gzfx {
  color: #bababa;
  background-color: #fff;
  display: inline-block;
  width: 50%;
  height: 100%;
  text-align: center;
  vertical-align: bottom;
  overflow-y: hidden;
}

.action_footer .gzfx .btn {
  display: inline-block;
  width: 50%;
  height: 120rpx;
  font-size: 28rpx;
  text-align: center;
}

.action_footer .gzfx .btn icon {
  display: block;
}

.action_footer .ljbm {
  font-size: 36rpx;
  line-height: 120rpx;
  color: #fff;
  background-color: #f00;
}

.ct_intro .ct_into_con .contentDetail {
  color: #666;
  font-size: 32rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.ct_intro .ct_into_con .logo_list {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: space-evenly;
  -ms-flex-pack: space-evenly;
  justify-content: space-evenly;
}

.ct_intro .ct_into_con image {
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.ct_intro .ct_into_con image.logo {
  width: 100rpx;
  height: 100rpx;
}

.active .at_img .at_zc, .active .activity_act icon {
  background-color: #ff2f56;
}

/* .active .at_con icon, .active .at_con text.money活动内容（时间、地点、费用、专场、报名人员） */

.active .at_desc .at_title text, .active .at_desc .at_title icon,
.active .at_desc .at_count text, .active .at_desc .at_count icon,
.active .at_con icon, .active .at_con text.money {
  color: #ff2f56;
}

.waiting .activity_act icon, .waiting .at_img .at_zc {
  background-color: #f3a90b;
}

/* .waiting .at_con icon, .waiting .at_con text.money活动内容（时间、地点、费用、专场、报名人员） */

.waiting .at_desc .at_title text, .waiting .at_desc .at_title icon,
.waiting .at_desc .at_count text, .waiting .at_desc .at_count icon,
.waiting .at_con icon, .waiting .at_con text.money {
  color: #f3a90b;
}

.live .activity_act icon, .live .at_img .at_zc {
  background-color: #ff5400;
}

/* live .at_con icon, .live .at_con text.money活动内容（时间、地点、费用、专场、报名人员） */

.live .at_desc .at_title text, .live .at_desc .at_title icon,
.live .at_desc .at_count text, .live .at_desc .at_count icon, .live .at_con icon,
.live .at_con text.money {
  color: #ff5400;
}

.live .ct_intro .ct_into_con .title:before {
  border-left: 20rpx solid #ff5400;
}

.ybm_list .ybm_user_list {
  padding: 20rpx 20rpx 0;
  position: relative;
}

.ybm_list .ybm_user_list.tips::before {
  content: '';
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.5);
}

.ybm_list .ybm_user_list.tips::after {
  content: '您的Ta全部在这里，快快报名吧！';
  position: absolute;
  left: 0;
  width: 100%;
  text-align: center;
  top: 40%;
  color: #fff;
  z-index: 2;
}

.ybm_list .ac_list_fix .ybm_user_list .ybm_user_list_li,
.ybm_list .ac_list_fix .ybm_user_list .ybm_user_list_li .a {
  -webkit-filter: blur(0.05rem);
  filter: blur(0.05rem);
}

.ybm_list .ybm_user_list .ybm_user_list_li {
  display: inline-block;
  width: 25%;
  margin: 10rpx auto;
  vertical-align: middle;
  text-align: center;
}

.ybm_list .ybm_user_list .ybm_user_list_li .a {
  display: block;
  width: 150rpx;
  height: 150rpx;
  background-size: cover;
  background-position: center;
  margin: 0 auto;
  border-radius: 20rpx;
  position: relative;
}

.ybm_list .ybm_user_list .ybm_user_list_li .a .bottom_info {
  width: 84%;
  height: 30rpx;
  background-color: rgba(250, 250, 250, 0.6);
  position: absolute;
  bottom: 10rpx;
  left: 2%;
  padding: 10rpx;
  border-radius: 5rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  font-size: 28rpx;
}

.ybm_list .ybm_user_list .ybm_user_list_li .a .bottom_info text.username {
  width: 50%;
  line-height: 30rpx;
  text-align: left;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ybm_user_list .ybm_user_list_li .a .bottom_info .sex icon {
  display: inline-flex;
  vertical-align: top;
  font-size: 28rpx;
}

.ybm_list .ybm_user_list .ybm_user_list_li .a .bottom_info .sex {
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
  color: #fff;
  padding: 0 0 5rpx;
  text-align: right;
  display: flex;
  align-items: center;
}

.ybm_list .ybm_user_list .ybm_user_list_li .a .heart {
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  top: -15rpx;
  right: 15rpx;
}

