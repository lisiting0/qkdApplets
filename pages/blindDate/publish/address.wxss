.address_panel {
  padding: 0;
  color: #3b3b3b;
}

.address_panel .address_con {
  background-color: #fff;
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 15rpx 0;
}

.address_panel .address_con view:nth-of-type(1) {
  width: 25%;
  font-size: 36rpx;
  color: #727176;
}

.address_panel .address_con view:nth-of-type(2) {
  width: 70%;
  text-align: right;
  font-size: 34rpx;
  color: #a3a3a4;
}

.address_panel .address_con view:nth-of-type(3) {
  width: 5%;
}

.address_panel .address_ex {
  color: #2a2a2a;
  font-size: 30rpx;
  padding: 0 20rpx;
}