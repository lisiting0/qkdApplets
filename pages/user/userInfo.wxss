@import "../../style/weui.wxss";

icon {
  display: inline-flex;
  vertical-align: top;
}

.fix-action {
  width: 60rpx;
  height: 60rpx;
  line-height: 50rpx;
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 5001;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  border: 1px solid #fff;
  background: rgba(0, 0, 0, 0.4);
  transition-duration: 0.5s;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  width: 100%;
  height: 565rpx;
}

.swiper-container .swiper image {
  width: 100%;
  height: 100%;
  background-size: cover;
}

.swiper-container view {
  position: absolute;
  color: #fff;
}

.swiper-container .swiper_count {
  bottom: 40rpx;
  right: 20rpx;
  width: 16%;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
  text-align: center;
}

.swiper-container .jy_number {
  bottom: 40rpx;
  left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 0 10rpx;
}

.swiper-container .rz {
  position: absolute;
  right: 0;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx 0 0 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  text-align: center;
}

.swiper-container .rz.spyrz {
  top: 26%;
}

.swiper-container .rz.yjbzj {
  top: 42%;
}

.swiper-container .rz image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.swiper-container text {
  font-size: 28rpx;
}

.jy_info_desc {
  background-color: #fff;
  margin: -20rpx 20rpx 0;
  padding: 20rpx;
  border-radius: 3px;
  position: relative;
}

.jy_info_desc .jy_info_desc_t {
  position: relative;
  overflow: hidden;
}

.jy_info_desc .jy_info_desc_t .jy_info {
  position: relative;
}

.jy_info_desc .jy_info_desc_t .jy_info .aliasName {
  font-size: 36rpx;
  color: #000;
  font-weight: 500;
}

.jy_info_desc .jy_info_desc_t .jy_info .gz_count {
  display: inline-block;
  margin-left: 60rpx;
}

.jy_info_desc .jy_info_desc_t .jy_info .gz_count icon {
  color: #ff5a33;
  display: inline-flex;
  vertical-align: middle;
}

.jy_info_desc .jy_info_desc_t .jy_info .gz_count text {
  vertical-align: middle;
}

.jy_info_desc .jy_info_desc_t .jy_info .jy_info_ico {
  margin: 30rpx 0 20rpx;
  line-height: 1;
  font-size: 30rpx;
}

.jy_info_ico .jy_info_trangle {
  display: inline-block;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
}

.jy_info_ico .jy_info_trangle icon {
  display: inline-flex;
  font-size: 30rpx;
}

.jy_info_ico .jy_xz {
  background-color: #fcb752;
  margin-left: 20rpx;
}

.jy_info_qm {
  font-size: 30rpx;
  color: #9b9ba3;
  padding: 10rpx 0;
  table-layout: fixed;
  word-wrap: break-word;
  word-break: break-all;
}

.jy_info_detail .detail_title {
  display: inline-flex;
  font-size: 32rpx;
}

.jy_info_detail .detail_title icon {
  display: inline-flex;
  margin-top: -6rpx;
  margin-right: 16rpx;
}

.jy_info_detail .detail_title view {
  display: inline-block;
}

.jy_info_detail .detail_info {
  border-left: 1px solid #e9e9e9;
  padding: 0 0 0 30rpx;
  margin-left: 18rpx;
}

.jy_info_detail .detail_info .rows {
  padding: 10rpx;
}

.jy_info_detail .detail_info .rows text {
  display: table-cell;
  font-size: 32rpx;
  color: #a6a6a6;
  text-align: left;
}

.jy_info_detail .detail_info .rows text:first-of-type {
  width: 300rpx;
}

.hazy_action {
  width: 300rpx;
  height: 68rpx;
  line-height: 68rpx;
  margin: 20rpx auto;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 20rpx;
  background: -webkit-linear-gradient(left, #ff7e4b, #ff341b, #ff0b00); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #ff7e4b, #ff341b, #ff0b00); /* Opera 11.6 - 12.0 */
  background: -moz-linear-gradient(left, #ff7e4b, #ff341b, #ff0b00); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff7e4b, #ff341b, #ff0b00); /* 标准的语法（必须放在最后） */
}

.view-panel {
  height: 360rpx;
}

.view-panel .view-content {
  margin: 0 auto;
  padding: 40rpx 40rpx 20rpx;
}

.view-panel .view-content textarea {
  width: 90%;
  height: 150rpx;
  margin: 0 auto;
  font-size: 32rpx;
  border: 1px solid #f2f2f2;
  border-radius: 20rpx;
  padding: 20rpx;
  text-align: left;
}

.view-panel .view-btn {
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx auto;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  border-radius: 20rpx;
  background-color: rgb(255, 66, 0);
}
