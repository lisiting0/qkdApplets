@import "../../style/weui.wxss";

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.header-top {
  width: 100%;
  height: 365rpx;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.header-top .top-bg {
  width: 100%;
  height: 100%;
}

.top-layer {
  padding: 0 30rpx 0;
  color: #fff;
}

.top-layer .head-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 0;
  float: left;
}

.top-layer .one-panel {
  text-align: right;
}

.top-layer .one-panel .icon-qr-code {
  font-size: 60rpx;
  color: #fff;
}

/* 二维码 */

.qrcode_con {
  position: relative;
}

.qrcode_con  .close-icon {
  position: absolute;
  right: 40rpx;
  top: 0;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: linear-gradient(to right, #ff9a63, #ff5b02); /* 标准的语法 */
  border: 1px solid #fff;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  z-index: 10;
}

.qrcode_con  .close-icon icon {
  color: #fff;
  font-size: 24rpx;
  line-height: 90rpx;
}

.qrcode_con  .qrcode_panel {
  width: 90%;
  height: 800rpx;
  margin: 0 auto;
  position: relative;
}

.qrcode_con  .qrcode_panel .qrcode-bg {
  width: 100%;
  height: 100%;
}

.qrcode_con .qrcode_panel view:nth-of-type(1) {
  font-size: 34rpx;
  color: #3f3c3f;
  margin-top: -700rpx;
}

.qrcode_con .qrcode_panel view.qrcode {
  width: 420rpx;
  height: 420rpx;
  margin: 40rpx auto 0;
}

.qrcode_con .qrcode_panel view.qrcode image {
  width: 100%;
  height: 100%;
}

.qrcode_con .qrcode_panel view:nth-of-type(3),
.qrcode_con .qrcode_panel view:nth-of-type(4) {
  font-size: 40rpx;
  color: #3f3c3f;
}

/* 操作菜单 */

.two-panel .action-menu {
  padding: 0 0 30rpx;
  text-align: right;
}

.two-panel .action-menu view {
  position: relative;
  display: inline-block;
  text-align: center;
  padding: 0 30rpx;
}

.two-panel .action-menu text.news {
  display: inline-block;
  text-align: center;
  color: #fff;
  padding: 0 8rpx;
}

.two-panel .action-menu .news.active {
  height: 7px;
  line-height: 7px;
  border-radius: 50%;
  background-clip: padding-box;
  vertical-align: middle;
  position: absolute;
  top: 0;
  right: 0.3rem;
  border: 1px solid #fff;
  background: #f74c31;
}

.two-panel .action-menu text.time {
  display: inline-block;
  text-align: center;
  color: #fff;
  padding: 0 8rpx;
  background-color: #f74c31;
}

.three-panel {
  position: relative;
  padding-top: 20rpx;
}

.three-panel .name {
  color: #fff;
  font-size: 36rpx;
}

.three-panel .auth-panel {
  position: absolute;
  right: 0;
  top: 0;
  overflow: hidden;
  padding: 10rpx;
  border-radius: 10rpx;
}

.three-panel .auth-panel view {
  float: left;
  margin-right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 10%;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  background-color: #c4c4c4;
}

.three-panel .auth-panel view icon {
  display: inline-flex;
  font-size: 32rpx;
}

.top-layer .auth-panel .idCard.demanda, .top-layer .auth-panel .car.demanda,
.top-layer .auth-panel .house.demanda, .top-layer .auth-panel .health.demanda,
.top-layer .auth-panel .video.demanda {
  background-color: #ffa800;
}

.top-layer .auth-panel .idCard image {
  width: 60%;
  height: 50%;
}

.top-layer .auth-panel .car image {
  width: 90%;
  height: 90%;
}

.top-layer .auth-panel .house image {
  width: 70%;
  height: 70%;
}

.top-layer .auth-panel .health image {
  width: 60%;
  height: 60%;
}

.top-layer .auth-panel .video image {
  width: 50%;
  height: 40%;
}

