/* 去掉默认滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page {
  position: relative;
}

.tips {
  position: absolute;
  right: 0;
  top: 120rpx;
  padding: 10rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.2);
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  z-index: 999;
}

.energy_wrap {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
  text-align: center;
}

.energy_container {
  position: absolute;
  max-height: 70%;
  width: 80%;
  left: 10%;
  top: 22%;
  padding: 10rpx 40rpx 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
}

.energy_container .energy_title {
  padding: 20rpx 0 10rpx;
  background-color: #fff;
  width: 100%;
  font-size: 36rpx;
  z-index: 1;
  border-radius: 20rpx;
  color: #000;
  border-bottom: 1px solid #f2f2f2;
}

.energy_container icon {
  position: absolute;
  right: 0;
  top: 0;
  padding: 10rpx 30rpx;
}

.energy_container .energy_con {
  z-index: 0;
  overflow-y: auto;
  overflow-x: hidden;
  position: relative;
  height: 680rpx;
  background: #fff;
  border-radius: 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.energy_content .desc {
  text-indent: 20rpx;
  font-size: 30rpx;
  color: #666;
  text-align: left;
  padding: 10rpx 0;
}

.energy_content .jxsz_title {
  font-size: 32rpx;
  color: #000;
  font-weight: 500;
  text-align: left;
  padding: 0 0 10rpx 0;
}

.table{
  margin-bottom: 20rpx;
}

.table-row {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.td {
  width: 50%; 
  height: 60rpx;
  line-height: 60rpx;
  text-align: left; 
  font-weight: 300;
}

.table-title .td{
  color: #f00;
  font-weight: 500;
  font-size: 30rox;
}

.table-td .td{
  color: #666;
  font-size: 30rpx;
}

.red_btn {
  width: 420rpx;
  margin: 30rpx auto 0;
  color: #fff;
  padding: 10rpx 0;
  border-radius: 50rpx;
  background: -webkit-linear-gradient(left, #ea6b61, #e95e52, #e85143); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #ea6b61, #e95e52, #e85143); /* Opera 11.6 - 12.0 */
  background: -moz-linear-gradient(left, #ea6b61, #e95e52, #e85143); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ea6b61, #e95e52, #e85143); /* 标准的语法（必须放在最后） */
}

.energy_ul_li {
  position: relative;
  overflow: hidden;
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
}

.energy_ul_li view {
  display: inline-block;
}

.energy_ul_li .ranking_index {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #e0e0e0;
  border-radius: 10rpx;
  vertical-align: middle;
  text-align: center;
  color: #fff;
  margin: 0 30rpx 0 20rpx;
}

.energy_ul_li .ranking_index.first {
  background-color: #f31d00;
}

.energy_ul_li .ranking_index.second {
  background-color: #e18948;
}

.energy_ul_li .ranking_index.third {
  background-color: #f3c23f;
}

.energy_ul_li .headImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.energy_ul_li .ranking_info {
  width: 50%;
  margin-left: 20rpx;
}

.energy_ul_li .ranking_info .name {
  font-size: 32rpx;
  color: #282828;
  display: block;
}

.energy_ul_li .ranking_info .age {
  display: inline-block;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  background-color: #fe84ab;
}

.energy_ul_li .ranking_info .age icon {
  display: inline-flex;
  vertical-align: top;
  font-size: 12px;
}

.energy_ul_li .ranking_num {
  font-size: 32rpx;
  color: #666;
}

.energy_ul_li .ranking_num icon {
  display: inline-flex;
  vertical-align: top;
  color: #fa160a;
  margin-right: 10rpx;
}
