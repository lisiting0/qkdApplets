.task-con {
  background-color: #fff;
  margin: 14px;
  padding: 20rpx;
  border-radius: 10rpx;
}

.task-con:first-child {
  padding: 0 10px;
  margin: 0 14px;
}

.task-con:first-child .task-panel {
  padding: 20px 0;
}

.task-con .task-top .task-title {
  font-size: 40rpx;
  font-weight: 500;
}

.task-con .task-top {
  padding: 10rpx;
}

.task-con .task-top .task-desc {
  color: #b9b9b9;
  font-size: 30rpx;
  font-weight: 300;
}

.task-con .task-panel {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 20rpx 0;
}

.task-con .task-panel .task-image {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-right: 20rpx;
}

.task-con .task-panel .task-image image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.task-right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.task-right view {
  width: 65%;
}

.task-right .one-view {
  font-size: 32rpx;
}

.task-right .two-view {
  font-size: 30rpx;
  color: #9a9a9d;
}

.action-view {
  position: absolute;
  top: 35%;
  right: 0;
  border-radius: 20rpx;
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #e85244;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.amount {  
  font-size: 34rpx;
  color: #00b1f7;
}

.finished{
  background-color: rgb(233, 233, 233);
}
