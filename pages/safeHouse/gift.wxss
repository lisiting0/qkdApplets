page{
  overflow: hidden;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
} 

.weui-navbar {
  position: relative;
  border-bottom: none;
  background-color: #fff;
}

.weui-navbar__item {
  padding: 20rpx 0 0;
  color: #9a9a9d;
}

.weui-navbar__item.weui-bar__item_on {
  color: #000;
}

.weui-navbar__slider {
  width: 2em;
  background-color: #ff4300;
}

.weui-search-bar {
  width: 100%;
}

.weui-tab__panel {
  padding-top: 0;
}

.gift_list{
  margin: 20rpx 0;
}
 
.gift_panel {
  height: 220rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
  background-color: #fff;
}

.jy_gift_img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}

.gift_center {
  margin-left: 20rpx;
}

.gift_center view:first-of-type {
  color: #8b8b8b;
  font-size: 36rpx;
  font-weight: 300;
}

.gift_center view:first-of-type .jy_auth_age {
  display: inline-block;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
}

.gift_center view:first-of-type .jy_auth_age icon {
  display: inline-flex;
  font-size: 30rpx;
}

.gift_center view:nth-of-type(2) {
  font-size: 32rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

.gift_center view:nth-of-type(2) text:first-of-type {
  display: inline-block;
  max-width: 360rpx;
  color: #b4b4b4;
  font-size: 30rpx;
}

.gift_center view:nth-of-type(2) text:nth-of-type(2) {
  margin-left: 5px;
  height: 40rpx;
  line-height: 40rpx;
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
  display: inline-flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-radius: 10rpx;
  padding: 0 14rpx;
  font-size: 28rpx;
  color: #fff;
}

.gift_center view:nth-of-type(2) text.xuni {
  background-color: #63843d;
}

.gift_time{
  color: #b4b4b4;
    font-size: 30rpx;
}

.gift_right {
  position: absolute;
  right: 20rpx;
}

.gift_right image {
  width:  110rpx;
  height: 110rpx;
}

.gift_right .gift_price{
  color: #ff7e00;
} 

.gift_right view{
  color: #9a9a9a;
}
