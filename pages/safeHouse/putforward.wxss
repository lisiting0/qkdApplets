.jy_pf_top {
  overflow: hidden;
  margin: 20rpx;
  -webkit-box-shadow: 0 0 0.2rem -0.1rem #ccc;
  box-shadow: 0 0 0.2rem -0.1rem #ccc;
  border-radius: 0.1rem;
  background-color: #fff;
}

.jy_pf_top .jy_pf_tit {
  overflow: hidden;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #8b8b8b;
  padding: 20rpx;
  border-bottom: 1px solid #dfdfdf;
}

.jy_pf_top .jy_pf_tit .bindAli {
  color: #8b8b8b;
  float: right;
}

.jy_pf_top .jy_pf_tit .bindAli:after {
  content: "\E702";
  display: inline-block;
  vertical-align: top;
}

.jy_pf_top .jy_pf_m {
  font-size: 30rpx;
  color: #504c55;
  margin: 20rpx;
}

.jy_pf_top .jy_pf_money {
  outline: 0;
  width: 100%;
  height: 120rpx;
  font-size: 80rpx;
  color: #504c55;
  line-height: normal;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  text-align: center;
  padding: 20rpx;
}

.jy_pf_top .jy_pf_tb {
  font-size: 30rpx;
  color: #a5a5a5;
  text-align: center;
  margin-bottom: 28rpx;
}

.jy_pf_tips {
  font-size: 30rpx;
  color: #929292;
  padding: 0 26rpx;
  margin: 20rpx 0;
}

.jy_pf_tipList {
  margin-bottom: 120rpx;
}

.jy_pf_tipList_li {
  font-size: 32rpx;
  color: #929292;
  padding: 0 26rpx;
  line-height: 1.3;
}

.jy_auth_btn {
  background-color: #ff9000;
}
