page {
  height: 100%;
}

.page {
  height: 100%;
  overflow: hidden;
}

.qrcode_bg {
  width: 100%;
  height: 100%;
  position: relative;
}

.qrcode_panel {
  width: 100%;
  height: 800rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.qrcode_panel .corde-border {
  width: 80%;
  height: 100%;
  margin: 10% auto 5%;
  position: relative;
}

.qrcode-title {
  font-size: 30rpx;
  color: #3f3c3f;
  position: absolute;
  top: 22%;
  left: 26%;
}

.container {
  position: absolute;
  top: 33%;
  left: 22%;
}

.container image {
  width: 420rpx;
  height: 420rpx;
}

.canvas-box {
  position: fixed;
  top: 999999rpx;
  left: 0;
}

.qrcode-sys {
  font-size: 42rpx;
  color: #3f3c3f;
  position: absolute;
  bottom: 8%;
  left: 41%;
}

.qrcode-dl {
  font-size: 38rpx;
  color: #3f3c3f;
  position: absolute;
  bottom: 0;
  left: 37%;
}

.button {
  width: 84%;
  height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  position: relative;
  bottom: 20%;
  left: 9%;
}

.button image {
  width: 100%;
  height: 100%;
  position: relative;
}

.button text {
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  top: 24%;
  left: 12%;
}
