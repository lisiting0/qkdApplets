.jy_qb_block {
  margin-bottom: 20rpx;
  overflow: hidden;
  background-color: #fff;
  padding: 0 20rpx;
}

.jy_qb .jy_qb_t {
  padding: 0.4rem 0;
  border-bottom: 1px solid #dcdcdc;
}

.jy_qb .jy_qb_p {
  font-size: 30rpx;
  color: #303030;
  line-height: 40rpx;
}

.jy_qb .jy_qb_p text {
  display: inline-block;
  vertical-align: top;
}

.jy_qb_tit {
  color: #a1a1a1;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.jy_qb_list {
  overflow: hidden;
}

.jy_qb_list .jy_qb_list_li {
  width: 33.333%;
  display: inline-block;
  text-align: center;
  margin-bottom: 20rpx;
}

.jy_qb_list .jy_qb_list_li .a {
  width: 90%;
  font-size: 32rpx;
  color: #242424;
  margin: 0 auto;
  position: relative;
}

.jy_qb_list .jy_qb_list_li .a:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border: 1px solid #e1e1e1;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-radius: 10rpx;
}

.jy_qb_list .jy_qb_list_li.cur .a:before {
  border: 2px solid #ffad01;
}

.jy_qb_list .jy_qb_list_li.cur .a:after {
  content: "\e62e";
  color: #ffad01;
  line-height: 1;
  position: absolute;
  right: 0;
  bottom: 0;
}

.jy_qb_list .a .give-text {
  font-size: 28rpx;
}

.jy_qb_list .a .em {
  color: #989898;
  font-size: 30rpx;
  display: block;
}

.jy_qb_pay_list {
  font-size: 32rpx;
  color: #202020;
}

.jy_qb_pay_list .jy_qb_pay_list_li {
  position: relative;
  border-top: 1px solid #dcdcdc;
  padding: 28rpx 0;
  line-height: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li.icon-weixindenglu:before {
  content: "\e681";
  color: #00c800;
  vertical-align: top;
  margin-right: 10rpx;
  font-size:36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li.cur:after {
  content: "\e7a6";
  color: #fea201;
}

.jy_qb_pay_list .jy_qb_pay_list_li {
  position: relative;
  border-top: 1px solid #dcdcdc;
  padding: 028rpx 0;
  line-height: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li.icon-icon-alipay:before {
  content: "\e65e";
  color: #0aaaf0;
  vertical-align: top;
  margin-right:10rpx;
  font-size: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li:after {
  content: "\e746";
  position: absolute;
  margin-top: -0.2rem;
  right: 0;
  top: 50%;
  line-height: 1;
  color: #dbdbdb;
}

.jy_qb .jy_qb_pay_all {
  font-size: 32rpx;
  color: #959595;
  padding: 0 30rpx;
}

.jy_qb .jy_qb_pay_all text {
  font-size: 36rpx;
  color: #ff9d00;
  display: inline-block;
  margin: 0 10rpx;
}

.jy_qb .jy_qb_xy {
  position: relative;
  font-size: 28rpx;
  color: #959595;
  padding: 20rpx 20rpx 20rpx 60rpx;
}

.jy_qb .jy_qb_xy:before {
  content: "\e62f";
  position: absolute;
  font-size: 28rpx;
  left: 20rpx;
  top: 36rpx;
  color: #ababab;
}

.jy_qb .jy_qb_btn {
  line-height: 80rpx;
  color: #fff;
  background-color: #ffa200;
  font-size: 36rpx;
  text-align: center;
}
