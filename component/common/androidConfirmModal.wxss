.wx-confirm-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.wx-confirm-box {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}

.wx-confirm-title {
  padding: 30rpx;
  text-align: left;
  font-size: 36rpx;
}

.wx-confirm-con {
  margin: 0rpx 30rpx 30rpx;
  text-align: left;
  color: #999;
  font-size: 34rpx;
}

.wx-confirm-btn {
  margin: 30rpx 0;
  text-align: right;
  padding: 0 30rpx;
}

.wx-confirm-btn text {
  padding: 0 40rpx;
  font-size: 36rpx;
}

.wx-confirm-btn .btn-no {
  color: #808080;
}

.wx-confirm-btn .btn-yes {
  color: #ff9000;
}
