@import "/style/iconfont.wxss";
@import "/style/weui.wxss";
@import "/style/common.wxss";

.jy_qb_block {
  overflow: hidden;
  background-color: #fff;
  padding: 0 40rpx;
  border-bottom: 30rpx solid #f2f2f2;
}

.jy_qb .jy_qb_rc {
  text-align: center;
  font-size: 36rpx;
  color: #000;
  padding: 10rpx 10rpx 30rpx;
} 

.jy_qb_mon {
  text-align: center;
  font-size: 50rpx;
  color: #000;
}

.jy_qb_rc {
  text-align: center;
  font-size: 36rpx;
  color: #000;
  padding: 100rpx 10rpx 30rpx;
}

.jy_qb_tit {
  color: #a1a1a1;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.jy_qb_pay_list {
  font-size: 32rpx;
  color: #202020;
}

.jy_qb_pay_list .jy_qb_pay_list_li {
  position: relative;
  border-top: 1px solid #dcdcdc;
  padding: 28rpx 0;
  line-height: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li.icon-weixindenglu:before {
  content: "\e681";
  color: #00c800;
  vertical-align: top;
  margin-right: 10rpx;
  font-size: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li.cur:after {
  content: "\e7a6";
  color: #fea201;
}

.jy_qb_pay_list .jy_qb_pay_list_li {
  position: relative;
  border-top: 1px solid #dcdcdc;
  padding: 028rpx 0;
  line-height: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li.icon-icon-alipay:before {
  content: "\e65e";
  color: #0aaaf0;
  vertical-align: top;
  margin-right: 10rpx;
  font-size: 36rpx;
}

.jy_qb_pay_list .jy_qb_pay_list_li:after {
  content: "\e746";
  position: absolute;
  margin-top: -0.2rem;
  right: 0;
  top: 50%;
  line-height: 1;
  color: #dbdbdb;
}

.jy_qb_pay_all {
  font-size: 32rpx;
  color: #959595;
  padding: 30rpx 40rpx;
}

.jy_qb_pay_all text{
  font-size: 40rpx;
  color: #ffa200;
}

.jy_qb_btn {
  color: #fff;
  background-color: #ffa200;
  font-size: 32rpx;
  text-align: center;
  padding: 16rpx 0;
}

.jy_qb_btn_abs {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
